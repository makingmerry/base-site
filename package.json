{
  "name": "base-site",
  "description": "Grunt task runner for rapid deployment of static PHP sites",
  "repository": {
    "type": "git",
    "url": "https://github.com/makingmerry/base-site"
  },
  "license": "UNLICENSED",
  "version": "1.1.15",
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "eslintConfig": {
    "extends": "airbnb",
    "env": {
      "browser": true,
      "es6": true
    },
    "rules": {
      "spaced-comment": [
        "error",
        "always",
        {
          "markers": [
            "/"
          ],
          "exceptions": [
            "///"
          ]
        }
      ]
    }
  },
  "devDependencies": {
    "autoprefixer": "^7.1.1",
    "babel-preset-es2015": "^6.24.1",
    "breakpoint-sass": "^2.7.1",
    "cssnano": "^3.7.7",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^5.0.3",
    "eslint-plugin-react": "^7.0.1",
    "grunt": "^1.0.1",
    "grunt-babel": "^6.0.0",
    "grunt-contrib-concat": "^1.0.1",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-imagemin": "^1.0.1",
    "grunt-contrib-nodeunit": "^1.0.0",
    "grunt-contrib-sass": "^1.0.0",
    "grunt-contrib-uglify": "^3.0.1",
    "grunt-contrib-watch": "^1.0.0",
    "grunt-criticalcss": "^2.1.0",
    "grunt-eslint": "^19.0.0",
    "grunt-postcss": "^0.8.0",
    "grunt-real-favicon": "^0.2.0",
    "grunt-svg-sprite": "^1.3.7",
    "grunt-svg2png": "^0.2.7",
    "pixrem": "^3.0.2"
  }
}
